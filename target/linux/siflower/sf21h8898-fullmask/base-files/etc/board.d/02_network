
. /lib/functions.sh
. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

macaddr_add() {
    local mac=$1
    local val=$2
    local oui=${mac%:*:*:*}
    local nic=${mac#*:*:*:}

    nic=$(printf "%06x" $((0x${nic//:/} + $val & 0xffffff)) | sed 's/^\(.\{2\}\)\(.\{2\}\)\(.\{2\}\)/\1:\2:\3/')
    echo $oui:$nic
}

macaddr_sub() {
    local mac=$1
    local val=$2
    local oui=${mac%:*:*:*}
    local nic=${mac#*:*:*:}

    nic=$(printf "%06x" $((0x${nic//:/} - $val & 0xffffff)) | sed 's/^\(.\{2\}\)\(.\{2\}\)\(.\{2\}\)/\1:\2:\3/')
    echo $oui:$nic
}

siflower_setup_interfaces()
{
	local board="$1"

	case $board in
	siflower,sf21h8898-evb)
		ucidef_add_switch "switch0" \
				  "0:lan" "1:lan" "2:lan" "3:lan" "5@eth4"
		ucidef_set_interface_lan 'eth0 eth1 eth2 eth4.1 eth5'
		ucidef_set_interface_wan 'eth3'
		;;
	bananapi,bpi-rv2-nand|\
	siflower,sf21h8898-bpi-nand)
		ucidef_set_interface_lan 'eth0 eth1 eth2 eth3 eth5'
		ucidef_set_interface_wan 'eth4'
		;;
	*)
		ucidef_set_interfaces_lan_wan 'eth0 eth1 eth2 eth3 eth4' 'eth5'
		;;
	esac

    ucidef_set_interface_guest 'guest'
}

siflower_setup_macs()
{
	local board="$1"

	case $board in
	siflower,sf21h8898-evb)
		local eth_mac=$(cat /sys/class/net/eth0/address)
		if [ -z "$eth_mac" ]; then
			break;
		fi

		local lan_mac=$(macaddr_add "$eth_mac" 1)
		local wan_mac=$(macaddr_add "$eth_mac" 6)
		[ -n "$lan_mac" ] && ucidef_set_interface_macaddr lan $lan_mac
		[ -n "$wan_mac" ] && ucidef_set_interface_macaddr wan $wan_mac
		;;
	siflower,sf21h8898-bpi-nand)
		local eth_mac=$(cat /sys/class/net/eth0/address)
		if [ -z "$eth_mac" ]; then
			break;
		fi

		local lan_mac=$(macaddr_add "$eth_mac" 1)
		local wan_mac=$(macaddr_add "$eth_mac" 6)
		[ -n "$lan_mac" ] && ucidef_set_interface_macaddr lan $lan_mac
		[ -n "$wan_mac" ] && ucidef_set_interface_macaddr wan $wan_mac
		;;
	esac
}

board_config_update
board=$(board_name)
siflower_setup_interfaces $board
siflower_setup_macs $board
board_config_flush

exit 0
